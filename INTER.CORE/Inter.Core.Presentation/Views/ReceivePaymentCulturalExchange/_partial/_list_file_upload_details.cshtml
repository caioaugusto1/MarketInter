@model IEnumerable<ReceivePaymentCulturalExchangeViewModel>

<div class="col-lg-10">
    <div class="card">
        <div class="card-header py-1">
            <h6 class="m-0 font-weight-bold text-primary">Files</h6>
        </div>
        <div class="card-body text-center">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Upload Date</th>
                                <th>Note</th>
                                <th>Value</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        @foreach (var file in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        @file.Type
                                    </td>
                                    <td>
                                        @file.UploadDate
                                    </td>
                                    <td>
                                        @file.Note
                                    </td>
                                    <td>
                                        @file.Value
                                    </td>
                                    <td>
                                        <a class="btn btn-info btn-circle btn-sm" href="@Url.Action("Download", "FileUpload", new { filename = file.FileName })"><i class="fas fa-download"></i></a>

                                        <a asp-action="Details" asp-route-id="@file.Id" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>

                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
