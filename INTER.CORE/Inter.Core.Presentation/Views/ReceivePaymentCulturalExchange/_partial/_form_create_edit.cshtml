@model ReceivePaymentCulturalExchangeViewModel


<div class="row">

    <div class="col-md-2">
        <div class="form-group">
            <label for="recipient-name" class="col-md-2 control-label">From:</label>
            <input asp-for="From" name="From" id="from" placeholder="From" class="form-control" required type="text">
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label for="recipient-name" class="col-md-2 control-label">To:</label>
            <input asp-for="To" name="To" id="dateOfPayment" placeholder="To" class="form-control" required type="text">
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label for="recipient-name" class="col-md-8 control-label">Date of Payment:</label>
            <input type="datetime-local" asp-for="DateOfPayment" id="dateOfPayment" class="form-control" required>
        </div>
    </div>
   
</div>

