@model Inter.Core.App.ViewModel.CollegeTimeViewModel

<form class="well form-horizontal form-create-collegeTime" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="col-md-4 control-label">Time*</label>
        <div class="col-md-8 inputGroupContainer">
            <div class="input-group">
                <div class="glyphicon glyphicon-user"></div>
                <span name="Time" class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input asp-for="Time" id="time" placeholder="School Name" class="form-control" required type="text">
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-4 control-label">Time For Week*</label>
        <div class="col-md-8 inputGroupContainer">
            <div class="input-group">
                <div class="glyphicon glyphicon-user"></div>
                <span name="TimeForWeek" class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input asp-for="TimeForWeek" id="timeForWeek" placeholder="School Name" class="form-control" required type="text">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Period*</label>
        <div class="col-md-8 inputGroupContainer">
            <div class="input-group">
                <div class="glyphicon glyphicon-user"></div>
                <span name="Period" class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input asp-for="Period" id="period" placeholder="School Name" class="form-control" required type="text">
            </div>
        </div>
    </div>
</form>
