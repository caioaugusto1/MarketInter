@model Inter.Core.App.ViewModel.CollegeViewModel

<div class="container">

    <h1 class="h3 mb-2 text-gray-800">College - Edit</h1>

    <table class="table table-striped" id="table-edit-college">
        <tbody>
            <tr>
                <td colspan="1">
                    <form class="well form-horizontal" asp-action="Create" id="form-create-college">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @await Html.PartialAsync("~/Views/College/_partial/_form_create_edit.cshtml")

                        <div class="form-group">
                            <div class="col-md-8 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                    <input onclick="college.loadingPartial();" type="button" value="+ College Time" class="btn btn-secondary btn-sm" />
                                </div>
                            </div>
                        </div>

                    </form>

                </td>
            </tr>

        </tbody>

    </table>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
