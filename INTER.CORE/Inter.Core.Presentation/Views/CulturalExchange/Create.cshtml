@model Inter.Core.App.ViewModel.CulturalExchangeViewModel

@await Html.PartialAsync("~/Views/Shared/_partial/_topMenu.cshtml")

<div class="container">

    <h1 class="h3 mb-2 text-gray-800">Cultural Exchange - NEW</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <td colspan="1">
                    <form class="well form-horizontal" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <fieldset>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Full Name*</label>
                                <select asp-for="IdStudent"
                                        asp-items="@(new SelectList(ViewBag.Students,"Id","FullName"))">
                                    <option>Please select one</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">College*</label>
                                <select asp-for="IdStudent"
                                        asp-items="@(new SelectList(ViewBag.Colleges,"Id","Name"))">
                                    <option>Please select one</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">INSUR*</label>
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="INSUR" /> @Html.DisplayNameFor(model => model.INSUR)
                                </label>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">Arrival Date*</label>
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Arrival" /> @Html.DisplayNameFor(model => model.INSUR)
                                </label>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">Start Date*</label>
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="StartDate" /> @Html.DisplayNameFor(model => model.StartDate)
                                </label>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">Company*</label>
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Company" /> @Html.DisplayNameFor(model => model.Company)
                                </label>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">Flight Number*</label>
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="FlightNumber" /> @Html.DisplayNameFor(model => model.FlightNumber)
                                </label>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">College Payment*</label>
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="CollegePayment" /> @Html.DisplayNameFor(model => model.CollegePayment)
                                </label>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">Cultural Exchange VALUE*</label>
                                <label class="form-check-label">
                                    <input class="form-check-input" type="number" asp-for="TotalValue" /> @Html.DisplayNameFor(model => model.TotalValue)
                                </label>
                            </div>

                            <div class="form-group">
                                <div class="col-md-8 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>


