@model IEnumerable<CulturalExchangeViewModel>

@await Html.PartialAsync("~/Views/Shared/_partial/_topMenu.cshtml")

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Cultural Exchange</h1>
    <p class="mb-4"><a target="_blank" href="CulturalExchange/Create">NEW</a></p>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"></h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Cultomer Id</th>
                            <th>Full Name</th>
                            <th>Date of Birth</th>
                            <th>College</th>
                            <th>Period</th>
                            <th>Accomodation</th>
                            <th>Arrival Date</th>
                            <th>Total Value</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.StudentViewModel.CustomerId
                                </td>
                                <td>
                                    @item.StudentViewModel.FullName
                                </td>
                                <td>
                                    @item.StudentViewModel.DateOfBirthday
                                </td>
                                <td>
                                    @item.CollegeViewModel.Name
                                </td>
                                <td>
                                    @item.CollegeTimeViewModel.Period
                                </td>
                                <td>
                                    @item.AccomodationViewModel.Identifier
                                </td>
                                <td>
                                    @item.ArrivalDateTime
                                </td>
                                <td>
                                    @item.TotalValue
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm"><i class="fas fa-edit"></i></a>

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-facebook btn-circle btn-sm"><i class="fas fa-info"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/js/demo/datatables.min.js"></script>
<script src="~/js/Student/student.js"></script>
