@model IEnumerable<CulturalExchangeViewModel>


<tbody id="culturalExchangeTBody">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.StudentViewModel.CustomerId
            </td>
            <td>
                @item.StudentViewModel.FullName
            </td>
            <td>
                @item.StudentViewModel.DateOfBirthday.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.CollegeViewModel.Name
            </td>
            <td>
                @item.CollegeTimeViewModel.Period
            </td>
            <td>
               <input type="checkbox" value="@item.Renew" />
            </td>
            <td>
                @(item.AccomodationViewModel.Identifier != null ? item.AccomodationViewModel.Identifier : "Don't have")
            </td>
            <td>
                @(item.ArrivalDateTime.HasValue && item.ArrivalDateTime.Value == DateTime.MinValue ? "Don't have" : item.ArrivalDateTime.Value.ToString())
            </td>
            <td>
                @item.TotalValue
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm"><i class="fas fa-edit"></i></a>

                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-facebook btn-circle btn-sm"><i class="fas fa-info"></i></a>

                <a asp-action="DetailsFilesUpload" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm"><i class="fas fa-file"></i></a>

                <a asp-action="PaymentDetails" asp-route-id="@item.Id" class="btn btn-dark btn-circle btn-sm"><i class="fas fa-atlas"></i></a>
            </td>
        </tr>
    }

</tbody>