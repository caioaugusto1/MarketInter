@model CulturalExchangeViewModel

<div class="row">
    <div class="col-md-6 form-group">
        <label class="col-md-4 control-label">Full Name*</label>
        <select asp-for="StudentId" required class="custom-select"
                asp-items="@(new SelectList(ViewBag.Students,"Id","FullName"))">
            <option>Please select one</option>
        </select>
        <span asp-validation-for="StudentViewModel" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="col-md-4 control-label">College*</label>
        <select asp-for="CollegeId" required id="college" class="form-control"
                asp-items="@(new SelectList(ViewBag.Colleges,"Id","Name"))">
            <option>Please select one</option>
        </select>
        <span asp-validation-for="CollegeViewModel" class="text-danger"></span>
    </div>
</div>

<br />

<div class="row">

    <div class="col-md-4">
        <label class="col-md-4 control-label">Accomodation*</label>
        <select asp-for="AccomodationId" required class="form-control"
                asp-items="@(new SelectList(ViewBag.Accomodations,"Id","Identifier"))">
            <option>Please select one</option>
        </select>
        <span asp-validation-for="AccomodationViewModel" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="col-md-4 control-label">Time*</label>
        <select asp-for="CollegeTimeId" required disabled id="collegeTime" class="form-control">
            <option value="notselected">Please select one</option>
        </select>
        <span asp-validation-for="CollegeTimeViewModel" class="text-danger"></span>
    </div>

</div>

<br />

<div class="row">

    <div class="col-md-4">
        <div class="form-group">
            <label class="col-md-4 control-label">Arrival*</label>
            <input asp-for="ArrivalDateTime" name="ArrivalDateTime" placeholder="Start Time" class="form-control" required type="datetime-local">
            <span asp-validation-for="ArrivalDateTime" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-4">
        <div class="form-group">
            <label class="col-md-6 control-label">Start Date*</label>
            <input asp-for="StartDate" name="StartDate" placeholder="Start Date" class="form-control" required type="date">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
</div>


<div class="row">

    <div class="col-md-2">
        <div class="custom-control custom-checkbox small">
            <label>
                <input id="accomodationIncludedCheck" type="checkbox" class="custom-control-input" />
                <label for="accomodationIncludedCheck" class="custom-control-label">Accomodation Included</label>
            </label>
            <span asp-validation-for="INSUR" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-2">
        <div class="custom-control custom-checkbox small">
            <label asp-for="CollegePayment">
                <input asp-for="CollegePayment" id="collegePaymentCheck" type="checkbox" class="custom-control-input" />
                <label asp-for="CollegePayment" for="collegePaymentCheck" class="custom-control-label"></label>
            </label>
            <span asp-validation-for="CollegePayment" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-2">
        <div class="custom-control custom-checkbox small">
            <label asp-for="INSUR">
                <input asp-for="INSUR" id="insurCheck" type="checkbox" class="custom-control-input" />
                <label asp-for="INSUR" for="insurCheck" class="custom-control-label"></label>
            </label>
            <span asp-validation-for="INSUR" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-2">
        <div class="custom-control custom-checkbox small">
            <label asp-for="Transfer">
                <input asp-for="Transfer" id="checkTransfer" type="checkbox" class="custom-control-input" />
                <label asp-for="Transfer" for="checkTransfer" class="custom-control-label"></label>
            </label>
            <span asp-validation-for="Transfer" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="custom-control custom-checkbox small">
            <label asp-for="Support">
                <input asp-for="Support" id="checkSupport" type="checkbox" class="custom-control-input" />
                <label asp-for="Support" for="checkSupport" class="custom-control-label"></label>
            </label>
            <span asp-validation-for="Support" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-2">
        <div class="custom-control custom-checkbox small">
            <label asp-for="Kit">
                <input asp-for="Kit" id="checkKit" type="checkbox" class="custom-control-input" />
                <label asp-for="Kit" for="checkKit" class="custom-control-label"></label>
            </label>
            <span asp-validation-for="Kit" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="custom-control custom-checkbox small">
            <label asp-for="SimCard">
                <input asp-for="SimCard" id="checkSimCard" type="checkbox" class="custom-control-input" />
                <label asp-for="SimCard" for="checkSimCard" class="custom-control-label"></label>
            </label>
            <span asp-validation-for="SimCard" class="text-danger"></span>
        </div>
    </div>
</div>


<div class="form-row">

    <div class="col-md-3">
        <div class="form-group">
            <label class="col-md-4 control-label">Start Accomodation*</label>
            <input type="date" class="form-control date-accomodation" disabled />
            <span asp-validation-for="QuantityDaysOfAccomodation" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            <label class="col-md-4 control-label">Finish Accomodation*</label>
            <input type="date" class="form-control date-accomodation" disabled />
            <span asp-validation-for="QuantityDaysOfAccomodation" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-2">
        <div class="form-group">
            <label class="col-md-2 control-label">Flight Number*</label>
            <input type="text" asp-for="FlightNumber" class="form-control" />
            <span asp-validation-for="FlightNumber" class="text-danger"></span>
            
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-6 control-label">Company*</label>
            <input type="text" asp-for="Company" class="form-control" required />
            <span asp-validation-for="Company" class="text-danger"></span>
            @*<div class="invalid-feedback">
                Please provide a valid state.
            </div>*@
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="col-md-4 control-label">Sales man*</label>
            <input class="form-control" type="text" asp-for="SalesMan" />
            <span asp-validation-for="SalesMan" class="text-danger"></span>

        </div>
    </div>

    <div class="col-md-2">
        <div class="form-group">
            <label class="col-md-42control-label">Total Value*</label>
            <input class="form-control" type="number" asp-for="TotalValue" />
            <span asp-validation-for="TotalValue" class="text-danger"></span>

        </div>
    </div>
</div>
