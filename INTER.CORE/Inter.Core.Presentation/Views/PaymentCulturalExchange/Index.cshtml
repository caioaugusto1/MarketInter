@model IEnumerable<PaymentCulturalExchangeViewModel>

<div class="container-fluid">
    <!-- Page Heading -->
    @*<h1 class="h3 mb-2 text-gray-800">Receive Payment Cultural Exchange</h1>
        <p class="mb-4"><a target="_blank" href="ReceivePaymentCulturalExchange/Create">NEW</a></p>*@
    <!-- DataTales Example -->

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List</h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Cultomer Id</th>
                            <th>Full Name</th>
                            <th>Arrival Date</th>
                            <th>Start Date</th>
                            <th>Date of Payment</th>
                            <th>Status</th>
                            <th>Value</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="culturalExchangeTBody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CulturalExchangeViewModel.StudentViewModel.CustomerId
                                </td>
                                <td>
                                    @item.CulturalExchangeViewModel.StudentViewModel.FullName
                                </td>
                                <td>
                                    @item.CulturalExchangeViewModel.ArrivalDateTime
                                </td>
                                <td>
                                    @item.CulturalExchangeViewModel.StartDate
                                </td>
                                <td>
                                    @item.DateOfPayment
                                </td>
                                <td>
                                    @item.Status
                                </td>
                                <td>
                                    @item.Value
                                </td>
                              
                                <td>
                                    <a asp-action="Download" asp-controller="FileUpload" asp-route-fileName="@item.FileName" class="btn btn-link btn-circle btn-sm"><i class="fas fa-download"></i></a>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm"><i class="fas fa-edit"></i></a>

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-facebook btn-circle btn-sm"><i class="fas fa-info"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/js/demo/datatables.min.js"></script>
