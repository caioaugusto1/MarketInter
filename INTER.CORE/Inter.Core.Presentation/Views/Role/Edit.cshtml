@model Inter.Core.App.ViewModel.Identity.EditRoleViewModel

<div class="container-fluid">

    <form method="post" asp-controller="Role" asp-action="Edit" asp-antiforgery="true" class="form-horizontal">

        <input type="hidden" name="RoleId" value="@Model.Role.Id" />
        <input type="hidden" name="RoleName" value="@Model.Role.Name" />


        <h1 class="h3 mb-2 text-gray-800">Role Name: @Model.Role.Name</h1>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">+ Add Users</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <td>User</td>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.NonMembers.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">All Users Are @Model.Role.Name</td>
                                </tr>
                            }
                            else
                            {
                                foreach (ApplicationUserViewModel user in Model.NonMembers)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>
                                            <div class="custom-control custom-checkbox small">
                                                <label>
                                                    <input id="idsToRemove" name="IdsToAdd" type="checkbox" class="custom-control-input" value="@user.Id" />
                                                    <label for="idsToRemove" class="custom-control-label"></label>
                                                </label>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">- Remove Users</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <td>User</td>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Members.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">
                                        No Users are @Model.Role.Name
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (ApplicationUserViewModel user in Model.Members)
                                {
                                    <tr>
                                        <td>@user.UserName</td>

                                        <td>
                                            <div class="custom-control custom-checkbox small">
                                                <label>
                                                    <input id="idsToRemove" name="IdsToRemove" type="checkbox" class="custom-control-input" value="@user.Id" />
                                                    <label for="idsToRemove" class="custom-control-label"></label>
                                                </label>
                                            </div>

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <button type="reset" class="btn btn-primary">Reset</button>
        <a class="btn btn-primary" asp-controller="Role" asp-action="Index">Cancel</a>

    </form>
</div>

@section Scripts {

    <script src="~/js/demo/datatables.min.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


