@model StudentViewModel

<div class="container">

    <h1 class="h3 mb-2 text-gray-800">Student - EDIT</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <td colspan="1">
                    <form asp-action="Edit" class="well form-horizontal" id="studentData">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <fieldset>

                            @await Html.PartialAsync("~/Views/Student/_partial/_form_create_edit.cshtml")

                            <input type="hidden" name="DateOfInsert" value="@Model.DateOfInsert" />
                            <input type="hidden" name="EnviromentId" value="@Model.EnviromentId" />

                        </fieldset>

                        <div class="form-group">
                            <div class="col-md-8 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>

                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {

    <script src="~/js/Util/Util.js"></script>
    <script src="~/js/Student/student.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}